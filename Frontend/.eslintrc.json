{
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
        "react"
    ],
    "env": {
        "node": 1
    },
    "rules": {
        "react/jsx-no-bind": [
            "error",
            {
                "allowArrowFunctions": true,
                "allowBind": false,
                "ignoreRefs": true
            }
        ],
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/prop-types": "error",
        "react/react-in-jsx-scope": "error",
        "require-jsdoc": 0,
        "linebreak-style": 0,
        "indent": [
            "error",
            4,
            {
                "ignoredNodes": [
                    "JSXElement *"
                ]
            }
        ],
        "react/prop-types": "off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "quotes": "off"
    }
}